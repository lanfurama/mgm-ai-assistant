# Vertex AI (Gemini on Vertex)
VITE_VERTEX_AI_API_KEY=your_vertex_ai_api_key_here
VITE_VERTEX_AI_PROJECT_ID=your_project_id_here
VITE_VERTEX_AI_LOCATION=europe-west4
VITE_VERTEX_AI_ENDPOINT_ID=your_endpoint_id_here

# Optional: Google Translate API
VITE_GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Backend API Base URL
# Leave empty to auto-detect from server IP/domain (recommended)
# Frontend will automatically detect IP/domain from window.location
# Only set if you need to override auto-detection
# VITE_API_BASE_URL=http://localhost:8000

# Optional: Backend port (default: 8000)
# Only needed if backend runs on different port
# VITE_API_PORT=8000
